.footer {
    width: 100%;
    height: 50px;
    border-top: 1px solid #bfbfbf;
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    font-size: .75rem;
    justify-content: space-around;
    background: #fff;
    z-index: 999;
}

.foot-btn {
    line-height: 13px;
    text-align: center;
}

.foot-btn.active {
    color: #f8441f;
}

.footer image {
    width: 30px;
    height: 30px;
}

.foot-btn view {
    width: 100%;
    text-align: center;
    font-size: .75rem;
}