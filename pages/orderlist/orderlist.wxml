<view class="btnlist">
    <view bindtap="seletab" class="li {{item.active}}" data-ind="{{index}}" data-status="{{item.status}}" wx:for="{{actives}}">{{item.name}}</view>
</view>
<view class="empty" wx:if="{{list==null}}">
    <image src="../../img/eo.png"></image>
    <view>您暂无相关订单</view>
    <view bindtap="yueyue" class="btn">马上定制</view>
</view>
<view class="list" wx:for="{{list}}">
    <view class="head">
        <view class="order">{{item.ordernumber}}</view>
        <block wx:if="{{item.status==0}}">
            <view bindtap="surepay" class="status" data-number="{{item.ordernumber}}" style="color:#f8441f;border:1px solid #f8441f;min-width:60px;font-size:14px;text-align:center;height:30px;line-height:30px;">付款</view>
            <view bindtap="delorder" class="status" data-number="{{item.ordernumber}}" style="color:#f8441f;border:1px solid #f8441f;min-width:60px;font-size:14px;text-align:center;height:30px;line-height:30px;">删除</view>
        </block>
        <view class="status" wx:if="{{item.status==1}}">待发货</view>
        <block wx:if="{{item.status==2}}">
            <view bindtap="sureshou" class="status" data-ids="{{item.id}}" data-ind="{{index}}" style="color:#f8441f;border:1px solid #f8441f;min-width:60px;font-size:14px;text-align:center;height:30px;line-height:30px;border-radius:10px;">确认收货</view>
            <view bindtap="lookkd" class="status" data-logistics="{{item.logistics}}" data-num="{{item.logisticsnum}}" style="min-width:60px;font-size:14px;text-align:center;height:30px;line-height:30px;border:1px solid #000;">查看物流</view>
        </block>
        <block wx:if="{{item.status==3}}">
            <view bindtap="lookkd" class="status" data-logistics="{{item.logistics}}" data-num="{{item.logisticsnum}}" style="min-width:60px;font-size:14px;text-align:center;height:30px;line-height:30px;border:1px solid #000;">查看物流</view>
            <view class="status">完成</view>
        </block>
        <view class="status" wx:if="{{item.status==4}}">取消</view>
    </view>
    <view class="center">
        <view class="left">
            <image class="bg" mode="widthFix" src="{{item.mimage}}"></image>
            <image class="zm" mode="widthFix" src="{{item.zimage}}"></image>
        </view>
        <view class="right">
            <view>型号：{{item.models}}</view>
            <view>规格：{{item.spec}}</view>
            <view>数量：{{item.num}}</view>
            <view>单价：{{item.price}}</view>
        </view>
    </view>
    <view class="types">
        <view>支付方式：
			<block wx:if="{{item.paytype==0}}">线下支付</block>
            <block wx:if="{{item.paytype==1}}">微信支付</block>
        </view>
        <view>配送方式：
			<block wx:if="{{item.peitype==0}}">快递</block>
            <block wx:if="{{item.peitype==1}}">自取</block>
        </view>
    </view>
    <view class="shop" hidden="{{item.moreshow}}">
        <view>店铺信息:</view>
        <view>店铺：{{item.shopname}}</view>
        <view>电话：{{item.shopmobile}}</view>
        <view>地址：{{item.shopaddress}}</view>
    </view>
    <view class="linkman" hidden="{{item.moreshow}}">
        <view>收货人:</view>
        <view>姓名：{{item.realname!='undefined'?item.realname:''}}</view>
        <view>电话：{{item.mobile!='undefined'?item.mobile:''}}</view>
        <view>地址：{{item.address!='undefined'?item.address:''}}</view>
    </view>
    <view>
        <view bindtap="showmore" class="bottom" data-ind="{{index}}">
            <image src="{{item.moreshow?'../../img/s1.png':'../../img/s2.png'}}"></image>
        </view>
    </view>
</view>
