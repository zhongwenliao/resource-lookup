<view class="head" style=" background-image: url({{bag}});">
    <block wx:if="{{bag=='https://30diy.cn/public/img/timg.jpg'}}">
        <view class="mask" style="background-image:url({{phonetype.bgimage}});width:{{w}}vw;height:{{h}}vw;"></view>
        <image src="{{imgurl}}" style="width:{{w}}vw;height:{{h}}vw"></image>
    </block>
</view>
<view class="list">
    <view>手机型号</view>
    <view>{{phonetype.name}}</view>
</view>
<view class="list">
    <view>数量</view>
    <view class="numbtn">
        <view bindtap="delnum" class="dpbtn">-</view>
        <view style="margin:0px 10px;line-height:25px;">{{num}}</view>
        <view bindtap="puhnum" class="dpbtn">+</view>
    </view>
</view>
<view class="list">
    <view>规格</view>
    <view class="numbtn" style="width:80%;flex-wrap:wrap;">
        <view bindtap="celgg" class="gg {{item.active}}" data-idx="{{index}}" style="margin-top:5px;" wx:for="{{gg}}">{{item.name}} ￥{{item.price}}</view>
    </view>
</view>
<view style="width:100%;height:50px;"></view>
<view class="foot">
    <view class="allprice">合计金额：<text>￥{{price}}</text>
    </view>
    <view class="btnlist">
        <view bindtap="joincar" class="left">加入购物车</view>
        <view bindtap="buyorder" class="right">提交订单</view>
    </view>
</view>
