.list-container {
  width: 100%;
  font-size: 28rpx;
}
.list-view {
  background-color: #FFFFFF;
  list-style: none;
  padding: 0;
}
.list-view ._li {
  width: 96%;
  padding: 20rpx 2%;
  overflow: hidden;
  border-bottom: 1rpx solid #F5F5F5;
}
.list-left {
  width: 80%;
  float: left;
}
.list-right-btn {
  width: 20%;
  float: left;
}
.list-right-btn button {
  font-size: 24rpx;
  padding: 0;
  color: #FFFFFF;
  background-color: #00aa00;
}
.bt-version-upgrade-page .firmware-progress-modal-content {
  background-color: #FFFFFF;
  padding: 30rpx 20rpx;
  border-radius: 15rpx;
}
.bt-version-upgrade-page .firmware-progress-modal-content .title {
  text-align: center;
}
.bt-version-upgrade-page .firmware-progress-modal-content .progress-view {
  width: 98%;
  padding: 0 1%;
