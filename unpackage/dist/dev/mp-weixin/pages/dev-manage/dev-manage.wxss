
view,
text {
	box-sizing: content-box;
}
.content {
	padding: 0;
}
.search {
	width: 100%;
	position: fixed;
	text-align: center;
	background: #FFFFFF;
	line-height: 60rpx;
}
.search image {
	display: inline-block;
	vertical-align: middle;
	width: 44rpx;
	height: 44rpx;
}
.search input {
	display: inline-block;
	vertical-align: middle;
	width: 50%;
	font-size: 28rpx;
}
.operation-text {
	width: 48%;
	color: #06AE56;
	float: left;
	margin: 100rpx 0 0;
}
.dev-list ._ul {
	padding: 0;
	margin-top: 12s0upx;
}
.dev-list ._ul ._li {
	background: #ffffff;
	width: 100%;
	margin-bottom: 6rpx;
	border-bottom: 2rpx solid #eee;
}
.sub-list {
	min-height: 100rpx;
	height: auto;
	display: inline-flex;
	width: 100%;
	align-items: center;
	padding: 10rpx 0;
	border-bottom: 1rpx dotted #eee;
}
.sub-list:after {
	content: " ";
	float: right;
	-webkit-transform: rotate(45deg);
	        transform: rotate(45deg);
	height: 8px;
	width: 8px;
	border-width: 5rpx 5rpx 0 0;
	border-color: #c8c8cd;
	border-style: solid;
	position: relative;
	margin-right: 18rpx;
	margin-left: .3em;
}
.dev-list ._ul ._li image {
	padding: 0 10rpx;
	width: 80rpx;
	height: 80rpx;
}
.dev-name {
	text-align: left;
	width: 60%;
	display: inline-block;
	padding-left: 16rpx;
}
.dev-type {
	text-align: right;
	width: 25%;
	display: inline-block;
	padding-right: 10rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.dev-info-btn {
	display: inline-block;
	width: 30%;
	margin-top: 3%;
	text-align: right;
	padding-right: 16rpx;
}
.dev-info-btn button {
	border: none;
	background: transparent;
	display: inline-block;
	padding: 0;
	width: 80rpx;
	height: 80rpx;
	margin-left: 5rpx;
}
.dev-info-btn button:after {
	border: none;
	padding: 0;
	width: 80rpx;
	height: 80rpx;
}
.dev-info-btn button image {
	width: 80rpx;
	height: 80rpx;
}
.no-data {
	width: 100%;
	height: 400rpx;
	text-align: center;
	line-height: 400rpx;
}
.connect-status {
	border-radius: 10rpx;
	padding: 0 10rpx;
	font-size: 24rpx;
	color: #FFFFFF;
}
.status-0 {
	background-color: red;
}
.status-1 {
	background-color: #06AE56;
}
.status-2 {
	background-color: #BEBEBE
}
.tag-style {
	width: 25%;
	color: #06AE56;
	border: 1rpx solid #06AE56;
	margin: 0 8rpx;
	text-align: center;
	font-size: 24rpx;
	border-radius: 25rpx;
	float: left;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

