page {
  display: flex;
  height: 100%;
}
.visit-list {
  border-top: 1px solid #DBDBDB;
  width: 100%;
  font-size: 30rpx;
  background: #f2f2f2;
}
.visit-list .opening-record-view-tab {
  background: #FFFFFF;
  color: #333333;
  font-weight: bold;
  font-size: 34rpx;
}
.visit-list .custom-swiper {
  height: calc(100% - 50px);
}
.visit-list .opening-record-view-list {
  width: 100%;
}
.search-input {
  padding: 0 40rpx 0 20rpx;
}
.search-input image {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  display: inline-block;
  padding-right: 10rpx;
}
.search-input input {
  width: 80%;
  padding: 10rpx;
  background: #FFFFFF;
  display: inline-block;
  font-size: 32rpx;
}
.event-list-view ._ul {
  padding: 0 20rpx;
  list-style: none;
}
.scroll-view {
  height: calc(100% - 50px);
  overflow: auto;
}
.event-list-view ._ul ._li {
  background: #FFFFFF;
  word-break: break-all;
  min-height: 70rpx;
  line-height: 70rpx;
  width: 94%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-left: 3%;
  /* margin-right: 3%;
	margin-bottom: 4upx; */
  border-bottom: 2rpx solid #EEEEEE;
  font-size: 30rpx;
}
.card {
  background: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 24rpx;
}
.card .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  border-bottom: 1px solid #F1F2F3;
  font-size: 30rpx;
}
.card .body {
  padding: 30rpx 20rpx 40rpx 20rpx;
}
.card .body .body-text {
  color: #333333;
}
.card .body .body-but-box {
  display: flex;
  justify-content: space-between;
}

