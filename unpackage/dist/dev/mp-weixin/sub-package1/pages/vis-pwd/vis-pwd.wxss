.share-btn {
	width: 100%;
	top: 600rpx;
	padding: 10rpx;
	background-color: #FFFFFF;
	padding-bottom: 52rpx;
	display: flex;
	justify-content: center;
}
.share-text {
	margin-top: 20rpx;
	padding: 28rpx 0rpx 34rpx 28rpx;
	font-size: 30rpx;
	font-weight: bold;
	color: #333333;
	line-height: 40rpx;
	background-color: #FFFFFF;
}
.btn-hover {
	background: #B4AEB5;
}
.btn {
	float: left;
	text-align: center
}
.btn image {
	width: 100rpx;
	height: 100rpx;
}
.btn button {
	font-size: 32rpx;
	background-color: transparent;
	border: none;
	border-style: none;
	width: 100rpx;
	height: 100rpx;
	padding: 0;
	border-width: 0rpx;
}
.btn button:after {
	border: none;
}

