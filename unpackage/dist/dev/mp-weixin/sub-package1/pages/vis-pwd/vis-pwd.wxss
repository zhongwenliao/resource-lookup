.content {
	display: flex;
	flex: 1;
	flex-direction: column;
	margin: 20rpx 0;
	width: 100%;
}
.password-area {
	/* position: absolute; */
	background-color: #FFFFFF;
	width: 100%;
	height: 500rpx;
	text-align: center;
	vertical-align: center;
	margin: 0 auto;
	padding: 50rpx 0;
	font-size: 40rpx;
}
.visitInfo {
	line-height: 40rpx;
	border-top: 1px solid #F1F2F3;
	color: #666666;
	background-color: #FFFFFF;
}
