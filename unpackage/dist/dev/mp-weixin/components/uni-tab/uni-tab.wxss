.wuc-tab {
  white-space: nowrap;
}
.wuc-tab-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 60rpx;
  padding: 0 20rpx;
}
.wuc-tab-item.cur {
  border-bottom: 4rpx solid;
}
.wuc-tab.fixed {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1024;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.flex {
  display: flex;
}
.text-center {
